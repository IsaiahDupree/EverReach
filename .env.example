# =============================================================================
# EVERREACH iOS STARTER - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# =============================================================================
# REQUIRED VARIABLES
# =============================================================================

# Supabase Configuration
# Get these from your Supabase project settings: https://app.supabase.com
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Backend API URL
# For development: http://localhost:3000
# For production: https://your-api.vercel.app
EXPO_PUBLIC_API_URL=http://localhost:3000

# =============================================================================
# OPTIONAL VARIABLES
# =============================================================================

# RevenueCat Configuration (for in-app purchases)
# Get this from your RevenueCat project settings: https://app.revenuecat.com
# iOS key (starts with appl_...)
EXPO_PUBLIC_REVENUECAT_IOS_KEY=your-revenuecat-ios-key
# Android key (starts with goog_...)
EXPO_PUBLIC_REVENUECAT_ANDROID_KEY=your-revenuecat-android-key

# Development Mode
# Set to "true" to show the developer overlay with customization guide
# Set to "false" or remove for production
DEV_MODE=true

# =============================================================================
# FEATURE FLAGS (OPTIONAL)
# =============================================================================

# Enable/disable specific features during development
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=false
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=false

# =============================================================================
# NOTES
# =============================================================================
# - All EXPO_PUBLIC_* variables are embedded in the app at build time
# - Never put sensitive secrets in EXPO_PUBLIC_* variables
# - DEV_MODE should be "false" in production builds
# - Restart your development server after changing these values
